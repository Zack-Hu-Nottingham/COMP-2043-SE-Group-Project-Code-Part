/* pages/more/moreInfo/moreInfo.wxss */
.userinfo {
    font-size: 14px;  
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  .userinfo-avatar {  
    justify-content: center;
    align-items: center;  
    overflow:hidden;
    width: 160rpx;  
    height: 160rpx;  
    margin: 20rpx;  
    margin-top: 50rpx;
    margin-left: 50rpx;
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  }
  
  .userNickName {
    padding-left: 80rpx;
  }

  .van-popup{
    display: flex;
    border-radius: 4%;
  } 
  .vab-field{
    display: flex;
    align-items: center;
  }

  .van-button{
    display: flex;
    align-items: center; 
    justify-content:center;
    width: 80%;
  }

  .van-dialog{
    display: table;
  }
<!--pages/project/newTask/newTask.wxml-->
<view class="form">
    <!--Set Task Information-->
    <van-cell-group inset style="padding: 10rpx;">
        <van-field label="{{dictionary.project_name}}" value="{{ name }}" size="large" input-align="right" placeholder="Enter name..." bind:change="typeName"/>
    </van-cell-group>
    
    <van-cell-group inset style="padding: 10rpx;">
        <van-cell title="{{dictionary.start_time}}" is-link size="large" value="{{startDate}}" bindtap="onDateDisplay" />
        <van-cell title="{{dictionary.end_time}}" is-link size="large" value="{{endDate}}" bindtap="onDateDisplay" />
    </van-cell-group>

    <!--Set other information-->
    <van-cell-group inset style="padding: 10rpx;">
        <van-cell title="{{dictionary.house_owner}}" is-link size="large" value="{{owner}}" bindtap="changeOwner" />
        <van-cell title="{{dictionary.participant}}" is-link size="large" value="{{follower}}" bindtap="changeFollower" />
        <van-cell title="{{dictionary.choose_template}}" is-link size="large" value="{{selectedTemplate}}" bindtap="selectTemplate" />
    </van-cell-group>

    <!--Set Time-->
    <van-calendar show="{{ show }}" title="choose period" type="range" bind:close="onClose" bind:confirm="onConfirm"/>

    <!--Description-->
    <van-cell-group inset style="padding: 10rpx;">
        <van-field label="{{dictionary.description}}" value="{{ description }}" type="textarea" placeholder="(less than 500 words)" size="large" maxlength="500" input-align="right" autosize bind:change="typeDescription" />
    </van-cell-group>
</view>

<!--Upload related images-->
<van-uploader class="uploader" file-list="{{ fileList }}" bind:after-read="upload" />

<!--Submit-->    
<van-button plain round block loading="{{isLoading}}" disabled="{{isLoading}}" class="submitBtn" color="#1296db" type="primary" size="normal" form-type="submit" bind:tap="formSubmit">{{dictionary.create_new_project}}</van-button>


<van-toast id="van-toast" />

<!-- pop up calendar -->
<van-calendar
  show="{{ show }}"
  title="choose period"
  type="range"
  bind:close="onDateClose"
  bind:confirm="onDateConfirm"
/>

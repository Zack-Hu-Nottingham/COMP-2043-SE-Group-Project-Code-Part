<!--pages/project/project.wxml-->



<view class="projectBlock">

  <view class="block">
    <view class="title">Projects</view>
  </view>

  <view class="container">
    <image class="taskIcon" src="/images/taskIcon.png"></image>
    
    <form bindsubmit='enterSpecificPro' report-submit>
      <button plain="true" form-type='submit' class="pro"><text>Project1</text></button>
    </form>
  </view>

  <view class="sp"></view>

  <view class="container">
    <image class="taskIcon" src="/images/taskIcon.png"></image>
    <form bindsubmit='enterSpecificTask' report-submit>
      <button plain="true" form-type='submit' class="pro"><text>Tasks</text></button>
    </form>
  </view>
</view>


<!-- 底部固定 -->
<view class="base">
  <form class="form" bindsubmit='createProject'>
    <van-button plain round type="info" form-type='submit' ><text class="addSign">New Project</text></van-button>
  </form>
</view>


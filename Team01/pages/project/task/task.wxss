.swiper-tab{
    flex: none;
    display: flex;
    background: #fff;
    font-size: 25rpx;
    color: #bbbbbb;
    border-top: 4rpx solid #efefef ;
    align-content: flex-start;
    /* justify-content: space-between; */
  }
  .swiper-tab-list{
    position: relative;
    flex: auto;
    /* flex-wrap: wrap; */
    text-align: center;
    line-height: 80rpx;
    width: 200rpx;
  }
  .on{
    color: #908df5;
  }
  .on:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 5rpx;
    background: #908df5;
  }
  
  .swiper-box{ 
      display: block; 
      height: 100%; 
      width: 100%; 
      overflow: hidden; 
  }
  .list {
      display:flex;
      flex-direction:row;
      padding:10px 15px;
      position: relative;
      flex-direction: row;
  }
  
  .block {
    margin-bottom: 10rpx;
    border-top: 2rpx solid #efefef;
  }
  
  .separator {
    background-color: #efefef;
    height: 20rpx;
    margin: 0rpx;
  }
  
  .progressingGroup {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 40rpx;
    width: 220rpx;
    background: #7FFFAA;
    padding: 10rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 0.5ex;
  }
  .notStartedGroup {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 40rpx;
    width: 220rpx;
    background: #F08080;
    padding: 10rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 0.5ex;
  }
  .finishedGroup {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 40rpx;
    width: 220rpx;
    background: #efefef;
    padding: 10rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 0.5ex;
  }
  
  .updateTime{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 20rpx;
    width: 300rpx;
    background: #eeeeee;
    color:#bbbbbb;
    padding: 10rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 0.5ex;
  }
  .base{
    position:fixed; 
    bottom: 40rpx; 
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.addSign{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50rpx;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    width: 100%;

}

.van-button--plain {
    width: 700rpx !important;
    height: 80rpx !important;
    border: 1rpx solid #1296db;
    color: #1296db;
    border-radius: 100%;
  }
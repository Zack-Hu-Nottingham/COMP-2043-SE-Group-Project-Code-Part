<van-cell-group inset style="padding: 30rpx">
  <van-cell title="{{dictionary.task_name}}" value="{{taskPage.name}}" />
</van-cell-group>


<van-cell-group inset style="padding: 30rpx" >
  <van-cell title="{{dictionary.start_time}}" is-link value="{{taskPage.startTime}}" bindtap="onDateDisplay" class="startTimeForTest"/>
  <van-cell title="{{dictionary.end_time}}" is-link value="{{taskPage.endTime}}" bindtap="onDateDisplay" />
</van-cell-group>

<van-cell-group inset style="padding: 30rpx">
  <van-cell title="{{dictionary.belong_to}}" value="{{belongTo}}" />
  <van-cell title="{{dictionary.stage_of_project}}" value="{{taskPage.stageOfProject}}" />
  <van-field model:value="{{taskPage.descriptions}}" input-align="right" clearable label="{{dictionary.description}}" placeholder="{{taskPage.descriptions}}" border="{{ false }}" bind:blur="onTaskDescriptionBlur">
  </van-field>
  <van-cell title="{{dictionary.current_state}}" value="{{taskPage.state}}" />
</van-cell-group>



<van-cell-group inset style="padding: 30rpx">
  <van-cell title="{{dictionary.priority}}" is-link value="{{taskPage.currentPriority}}" bindtap="clickPriority" />
  <van-cell title="{{dictionary.tag}}" is-link value="{{taskPage.tag}}" />
  <van-cell title="{{dictionary.participant}}" is-link value="{{taskPage.participant}}" />
</van-cell-group>

  <!--Upload related images-->
  <van-uploader class="uploader" file-list="{{ fileList }}" bindtap="upload" deletable="{{ true }}" max-count="8" bind:delete="deleteImg"/>

  <van-divider />

 
 <!-- feedback -->
 <van-cell-group  title="{{dictionary.comment_list}}">
  <van-cell-group inset class="cell-group" wx:for="{{ feedback }}" wx:key="index">
  <view class="projectDelay">
    <van-cell  title="{{item.type.name}}" label="{{item.details}}" clickable
      link-type="navigateTo" url="/pages/project/fileList/fileList?id={{item.belongTo}}&index={{index}}">{{item.createTime}}</van-cell>
  </view>
  </van-cell-group> </van-cell-group>

  <van-sticky offset-top="{{ 0 }}">
    <van-button hairline plain round block type="info" bindtap="clickAddComment" class="addComment">{{dictionary.add_comment}}</van-button>
  </van-sticky>

<van-action-sheet
  show="{{ priorityShow }}"
  actions="{{ priority }}"
  bind:close="onPriorityClose"
  bind:select="onPrioritySelect"
/>

<van-calendar
  show="{{ dateShow }}"
  title="choose period"
  type="range"
  bind:close="onClose"
  bind:confirm="onConfirm"
/>